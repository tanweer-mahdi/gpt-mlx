{
    "data": {
        "dataset_path": "datasets/tiny_shakespeare.txt",
        "train_split": 0.8
    },
    "model": {
        "context_window": 256,
        "embedding_dim": 64,
        "batch_size": 32,
        "num_heads": 4,
        "num_blocks": 3,
        "dropout": 0.1
    },
    "training": {
        "n_eval_steps": 200,
        "n_train_steps": 5000,
        "eval_interval": 500,
        "learning_rate": 1e-3
    },
    "generation": {
        "max_new_tokens": 500
    }
}
